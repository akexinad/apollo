{
    "compilerOptions": {
        "allowJs": false,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": ["./types", "node_modules/@types"]
    },
    "include": [
        "types",
        "src/**/*.ts",
        "tests/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        ".vscode",
    ]
}